{% extends "layout.njk" %}

{% block head %}
  <title>Receitas - Foodfy</title>

{% endblock %}

{% block content %}

  <section class="content">
    <section class="cards recipes">
      {% for item in items %}
        <div class="card" id="{{loop.index0}}">
          <div class="card_image">
            <img src="{{ item.image }}" alt="Imagem de {{ item.title }}"/>
          </div>

          <div class="card_title">
            <h3>{{ item.title }}</h3>
          </div>

          <div class="card_author">
            <p>{{ item.author }}</p>
          </div>
        </div>
      {% endfor %}

    </section>
  </section>

{% endblock %}