<div class="item">
    <div>Imagem da receita</div>
    <div>
        <input type="url" name="image" value="{{ recipe.image }}">
    </div>
</div>

<div class="item">
    <div>Nome da receita</div>
    <div>
        <input type="text" name="title" value="{{ recipe.title }}">
    </div>
</div>

<div class="item">
    <div>Autor</div>
    <div>
        <input type="text" name="author" value="{{ recipe.author }}">
    </div>
</div>

<div class="item">
    <div>Ingredientes</div>
    {% for ingredient in recipe.ingredients %}
        <li>{{ingredient}}</li>
    {% endfor %}
</div>

<div class="item">
    <div>Modo de preparo</div>
    <div>
        <input type="text" name="preparation" value="{{ recipe.preparation }}">
    </div>
</div>

<div class="item">
    <div>Informações adicionais</div>
    <div>
        <input type="text" name="information" value="{{ recipe.information }}">
    </div>
</div>