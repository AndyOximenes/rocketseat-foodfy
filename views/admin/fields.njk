<div class="item">
    <div>Imagem da receita</div>
    <div>
        <input type="url" name="image" value="{{ recipe.image }}">
    </div>
</div>

<div class="item">
    <div>Nome da receita</div>
    <div>
        <input type="text" name="title" value="{{ recipe.title }}">
    </div>
</div>

<div class="item">
    <div>Autor</div>
    <div>
        <input type="text" name="author" value="{{ recipe.author }}">
    </div>
</div>

<div class="item" id="ingredients">
    <div>Igredientes</div>
    {% for ingredient in recipe.ingredients %}
        <div class="ingredients">
            <input type="text" name="ingredients[]" value="{{ingredient}}">
        </div>
    {% else %}
        <div class="ingredients">
            <input type="text" name="ingredients[]">
        </div>
    {% endfor %}
</div>
<a type="button" class="add-ingredient">Adicionar novo ingrediente</a>

<div class="item" id="preparation">
    <div>Modo de preparo</div>
    {% for preparation in recipe.preparation %}
        <div class="preparations">
            <input type="text" name="preparation[]" value="{{preparation}}">
        </div>
    {% else %}
        <div class="preparations">
            <input type="text" name="preparation[]">
        </div>
    {% endfor %}
</div>
<a type="button" class="add-preparation">Adicionar novo passo</a>

<div class="item">
    <div>Informações adicionais</div>
    <div>
        <textarea name="information" cols="30" rows="10" value="{{ recipe.information }}">{{ recipe.information }}</textarea>
    </div>
</div>