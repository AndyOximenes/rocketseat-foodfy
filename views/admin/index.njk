{% extends "layoutAdmin.njk" %}

{% block content %}

    <section class="content-admin">
        <h2>Gerenciar receitas</h2>
        <section class="cards recipes admin">
            {% for item in items %}
                <div class="card_admin" id="{{loop.index0}}">
                    <div class="card_image_admin">
                        <img src="{{ item.image }}" alt="Imagem de {{ item.title }}"/>
                    </div>

                    <div class="card_title_admin">
                        <h3>{{ item.title }}</h3>
                    </div>

                    <div class="card_author_admin">
                        <p>
                            por
                            {{ item.author }}
                        </p>
                    </div>

                    <div class="view_card">
                        <a href="">Visualizar</a>
                    </div>
                </div>
            {% endfor %}

        </section>
    </section>

{% endblock %}