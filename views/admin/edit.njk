{% extends "layouts/layoutAdmin.njk" %}

{% block head %}
    <title>Editar receita</title>
    {% endblock%}

    {% block content%}

        <section class="content-admin">
            <form action="/admin/recipes/{{ id }}?_method=PUT" method="POST">

                <div class="recipes-admin-button-text-edit">
                    <h1>Editando receita</h1>
                    <button class="delete-recipe" form="form-delete" type="submit">Deletar</button>
                    <button class="save-recipe" type="submit">Salvar receita</button>
                </div>

                {% include "admin/fields.njk" %}

            </form>

            <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST"></form>

        </section>
    {% endblock %}